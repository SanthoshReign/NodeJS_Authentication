<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--******************************    Favicon     ************************************ -->

    <link rel="manifest" href="../../public/Favicon/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <link rel="icon" type="image/svg+xml" href="/images/favicon.png">
    <!-- ***************************   Bootstrap CSS    ***************************************-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/Style.css">
    <title>Login</title>
</head>

<body>

    <div class="container-fluid ">

        <div class="wrapper backg">
            <div class="row justify-content-center mt-2">
                <div class="row">
                    <div class="col-md-12">
                        <img src="./images/favicon.png" class="authenticationLogo" alt="" />
                    </div>
                </div>
                
        
                <!-- *****************************  right Area   ***************************** -->
                <div class="col-md-5 p-5 rounded box">

                    <div class="msg">
                        <img class="Logo ms-3" src="./images/login.jpeg" alt="" />
                    </div>
                    <!-- ******************************************************************** -->
                    
                    <form action="/signin" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                        <% if(messages.error) { %>
                            <div class="text-red-500 text-sm para">
                                <%= messages.error %>
                            </div>
                        <% }else{ %>
                            <div style="color: green; font-size: 1.5rem;" class="text-red-500 text-sm para">
                                <%= messages.success %>
                            </div>
                        <% } %>
                        <div class="mb-3">
                            <label for="username" class=" form-label font-bold">Email</label>
                            <input name="username" value="<%= messages.username  %>" type="email"
                            class="form-control" id="username" placeholder="Enter your Email">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label font-bold">Password</label>
                            <input name="password" type="password" class="form-control" id="password"
                                placeholder="Enter Your Password">
                        </div>

                        <div class="d-grid gap-2 col-8 mx-auto">
                            <button type="submit" class="btn btn-primary mb-4">Login</button>

                        </div>


                    </form>
                    <div>
                        <a class="inline-block align-baseline font-bold text-sm msg-s" href="/reset">
                            Reset password?
                        </a>

                        <hr>
                        New User
                        <a class="inline-block align-baseline font-bold text-sm  btn btn-primary" href="/">
                            Don't have an account?
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
</body>

</html>